import random
import re
import socket
import ssl
import sys
import time
import urllib.request

logs = [
	# [ "Log Address", "Log ID (base64-encoded sha256 of log public key)" ]
	[ "ct.googleapis.com/aviator", "aPaY+B9kgr46jO65KB1M/HFRXWeT1ETRCmesu09P+8Q=" ],
